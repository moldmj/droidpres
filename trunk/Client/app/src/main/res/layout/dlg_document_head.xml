<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15px"
        android:paddingLeft="5px"
        android:paddingRight="5px" >

        <RadioGroup
            android:id="@+id/rgPresVen"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" android:visibility="visible">

            <RadioButton
                android:id="@+id/rbPres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/lb_pres" android:enabled="true"/>

            <RadioButton
                android:id="@+id/rbVen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="true"
                android:text="@string/lb_ven" />
        </RadioGroup>

        <DatePicker
            android:id="@+id/DocumentDateTimePicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Тип документа:" />

        <Spinner
            android:id="@+id/spTypeDoc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10px" />

        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:text="Склад:" android:id="@+id/textView"/>
        <Spinner android:id="@+id/spWarehouse" android:layout_width="fill_parent" android:layout_height="wrap_content"
                 android:paddingTop="10px"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Коментарий:" />

        <EditText
            android:id="@+id/eDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true" />
    </LinearLayout>

</ScrollView>